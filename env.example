# AI 데이터 분석 비서 - 환경 변수 템플릿
# 실제 사용 시 .env 파일로 복사하여 값을 설정하세요

# OpenAI API 설정
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# 데이터베이스 설정
DATABASE_URL=postgresql://user:password@localhost:5432/ai_analyst
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/ai_analyst_test

# Redis 캐시 설정
REDIS_URL=redis://localhost:6379/0

# 보안 설정
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# 애플리케이션 설정
APP_NAME=AI 데이터 분석 비서
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# 파일 업로드 설정
MAX_FILE_SIZE=104857600  # 100MB
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=xlsx,xls,csv

# 성능 설정
CACHE_TTL=3600  # 1시간
MAX_CONCURRENT_QUERIES=50
QUERY_TIMEOUT=300  # 5분

# Gradio 설정
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=False
